{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "Templates, whitepapers, and guides"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text"
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["files"]
    },
    "resourceType": {
      "type": "enumeration",
      "enum": ["Template", "Whitepaper", "Case Study", "Guide"],
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["Agile", "Risk", "PMP", "General"],
      "default": "General"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}

